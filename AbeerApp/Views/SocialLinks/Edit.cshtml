@model AbeerContactShared.Data.Repo.SocialLink

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>SocialLink</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />           
            <div class="form-group">
                <label asp-for="UrlSocialProfile" class="control-label"></label>
                <input asp-for="UrlSocialProfile" class="form-control" />
                <span asp-validation-for="UrlSocialProfile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TypeSocialLink" class="control-label"></label>
                <select asp-for="TypeSocialLink" class="control-label">
                    <option value="Facebook">Facebook</option>
                    <option value="Linkedin">Linkedin</option>
                </select>
                <span asp-validation-for="TypeSocialLink" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

