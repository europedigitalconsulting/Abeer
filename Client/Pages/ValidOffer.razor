@page "/ValidOffer/{OfferId}"
@using Abeer.Shared.Functional
@attribute [Microsoft.AspNetCore.Authorization.Authorize]
@inject Microsoft.Extensions.Localization.IStringLocalizer<CreateAd> Loc
@inject IHttpClientFactory HttpClientFactory
@inject NavigationManager NavigationManager
@code
{
    [Parameter]
    public string OfferId { get; set; }

    public string Step { get; set; } = "Step1";

    public OfferModel Offer { get; set; } = new OfferModel();
    public OfferPrice CurrentPrice { get; set; } = new OfferPrice();

    async Task Step2()
    {
        Step = "Step2";
        await InvokeAsync(StateHasChanged);
    }

    protected override async Task OnParametersSetAsync()
    {
        var httpClient = HttpClientFactory.CreateClient("Abeer.Anonymous");
        var offer = await httpClient.GetAsync("api/");
        await base.OnParametersSetAsync();
    }

    async Task SelectOffer(OfferPrice currentPrice)
    {
        CurrentPrice = currentPrice;
        Step = "Step3";
        await InvokeAsync(StateHasChanged);
    }

    async Task Finish()
    {
        NavigationManager.NavigateTo("/MyOffers");
    }
}
<section class="section">
    <div class="section-header">
        <h1>@Loc["Title"]</h1>
        <h2>@Offer.Title</h2>
    </div>
    <div class="card">
        <div class="card-body">            
            <h3>@Loc["Summary"]</h3>
            <div class="form-group col-6 col-sm-12">
                <label>@Loc["AdTitle"]</label>
                <input type="text" Class="form-control" @bind="Offer.Title" disabled="disabled" />
            </div>
            <div class="form-group col-6 col-sm-12">
                <label>@Loc["Description"]</label>
                <textarea type="text" Class="form-control" rows="6" @bind="Offer.Description" disabled="disabled"/>
            </div>
            <div class="form-group col-6 col-sm-12">
                <label>@Loc["Price"]</label>
                <input type="number" Class="form-control" @bind="Offer.Price" disabled="disabled"/>
            </div>
            <div class="form-group col-6 col-sm-12">
                <label>@Loc["Url1"]</label>
                <input type="url" Class="form-control" @bind="Offer.Url1" disabled="disabled"/>
            </div>
            <div class="form-group col-6 col-sm-12">
                <label>@Loc["Url2"]</label>
                <input type="url" Class="form-control" @bind="Offer.Url2" disabled="disabled"/>
            </div>
            <div class="form-group col-6 col-sm-12">
                <label>@Loc["Url3"]</label>
                <input type="url" Class="form-control" @bind="Offer.Url3" disabled="disabled"/>
            </div>
            <div class="form-group col-6 col-sm-12">
                <label>@Loc["Url4"]</label>
                <input type="url" Class="form-control" @bind="Offer.Url4" disabled="disabled"/>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-12">
                <div class="card profile-widget border">
                    <div class="profile-widget-header">
                        <h4>@CurrentPrice.PriceName</h4>
                    </div>
                    <div class="profile-widget-description pb-0">
                        <div class="profile-widget-name">@CurrentPrice.PriceDescription</div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success" @onclick="Finish"><i class="fas fa-upload"></i>@Loc["Finish"]</button>
            </div>
        </div>
    </div>
</section>