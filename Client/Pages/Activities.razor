@page "/activities"
@using System.Net.Http
@attribute [Authorize]
@inject NavigationManager Navigation
@inject Microsoft.Extensions.Localization.IStringLocalizer<Activities> Loc
@inject Microsoft.Extensions.Configuration.IConfiguration Configuration

<section class="section">
    <div class="mt-4">
        <label style="font-size: 30px; font-weight: 600; color: black;" class="">@Loc["Title"]</label>
    </div>
    <div class="section-header p-0">
        @Loc["CatchPhrase"]
    </div>
    <div class="section-body">
        <div class="row">

            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-primary shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                    @Loc["NumberOfViews"]
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">@UserProfile.NumberOfView</div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-eye fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-success shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                    @Loc["NumberOfContacts"]
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">@UserProfile.NumberOfContacts</div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-user-friends fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-info shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                    @Loc["NumberOfAds"]
                                </div>
                                <div class="row no-gutters align-items-center">
                                    <div class="col-auto">
                                        <div class="h5 mb-0 mr-3 font-weight-bold text-gray-800">@UserProfile.NumberOfAds</div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-clipboard-list fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="card border-left-success shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                @Loc["Historic"]
                            </div>
                            <div class="row no-gutters align-items-center">
                                <Chart @ref="_chart" Config="_config" Width="ChartLargeWidth"></Chart>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="card border-left-success shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                @Loc["Repartition"]
                            </div>
                            <div class="row no-gutters align-items-center">
                                <Chart @ref="_chartRepartition" Config="_repartitionConfig" Width="ChartLargeWidth"></Chart>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        @if (UserProfile.NumberOfAds > 0 && Ads?.Any() == true)
        {
            <div class="row">
                <div class="col-12">
                    <div class="card border-left-success shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                    @Loc["Top10Ads"]
                                </div>
                                <div class="row no-gutters align-items-center">
                                    <div class="table-responsive">
                                        <table class="table table-striped table-hover">
                                            <thead>
                                                <tr>
                                                    <th>@Loc["Title"]</th>
                                                    <th>@Loc["Price"]</th>
                                                    <th>@Loc["StartDisplayDate"]</th>
                                                    <th>@Loc["EndDisplayDate"]</th>
                                                    <th>@Loc["CreatedDate"]</th>
                                                    <th>@Loc["NumberOfView"]</th>
                                                    <th></th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <Virtualize Context="ad" Items="Ads">
                                                    <tr>
                                                        <td>@ad.Title</td>
                                                        <td>@ad.Price @ad.Currency</td>
                                                        <td>@ad.StartDisplayTime.ToShortDateString()</td>
                                                        <td>@ad.EndDisplayTime.Value.ToShortDateString()</td>
                                                        <td>@ad.CreateDate.ToShortDateString()</td>
                                                        <td>@ad.ViewCount</td>
                                                        <td>
                                                            <a class="btn btn-secondary" href="@($"/ads/details/{ad.Id}")" title="@Loc["Detail"]"><i class="far fa-eye"></i></a>
                                                            <a class="btn btn-secondary" href="@($"/ads/statistics/{ad.Id}")" title="@Loc["Statistics"]"><i class="fas fa-chart-line"></i></a>
                                                        </td>
                                                    </tr>
                                                </Virtualize>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</section>