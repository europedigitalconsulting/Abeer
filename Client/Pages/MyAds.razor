@page "/MyAds"
@attribute [Microsoft.AspNetCore.Authorization.Authorize]
@inject HttpClient HttpClient
@inject Microsoft.Extensions.Localization.IStringLocalizer<MyAds> Loc
@code
{
    List<Abeer.Shared.Functional.AdModel> Ads = new List<Abeer.Shared.Functional.AdModel>();
    bool ModalEditAdVisible;
    Abeer.Shared.Functional.AdModel Current = new Abeer.Shared.Functional.AdModel();
    bool UpdateHasError;
    bool ModalDeleteAdVisible;
    bool DeleteHasError;

    protected override async Task OnParametersSetAsync()
    {
        await base.OnParametersSetAsync();
        var getAds = await HttpClient.GetAsync("/api/Ad");
        getAds.EnsureSuccessStatusCode();
        var json = await getAds.Content.ReadAsStringAsync();
        Ads = Newtonsoft.Json.JsonConvert.DeserializeObject<List<Abeer.Shared.Functional.AdModel>>(json);
    }

    void OpenEditModal(Abeer.Shared.Functional.AdModel ad)
    {
        Current = ad;
        ModalEditAdVisible = true;
    }

    void OpenDeleteModal(Abeer.Shared.Functional.AdModel adModel)
    {
        Current = adModel;
        ModalDeleteAdVisible = true;
    }

    async Task Update()
    {
        var update = await HttpClient.PutAsJsonAsync<Abeer.Shared.Functional.AdModel>("/api/Ad", Current);
        update.EnsureSuccessStatusCode();
        ModalEditAdVisible = false;
        await InvokeAsync(StateHasChanged);
    }

    async Task Delete()
    {
        var update = await HttpClient.DeleteAsync($"/api/Ad/{Current.Id}");
        update.EnsureSuccessStatusCode();
        ModalDeleteAdVisible = false;
        await InvokeAsync(StateHasChanged);
    }

    string ImageUrl1 => Current?.ImageUrl1;
    string ImageUrl2 => Current?.ImageUrl2;
    string ImageUrl3 => Current?.ImageUrl3;
    string ImageUrl4 => Current?.ImageUrl4;

    void AssignImageUrl1(string imgUrl) => Current.ImageUrl1 = imgUrl;
    void AssignImageUrl2(string imgUrl) => Current.ImageUrl2 = imgUrl;
    void AssignImageUrl3(string imgUrl) => Current.ImageUrl3 = imgUrl;
    void AssignImageUrl4(string imgUrl) => Current.ImageUrl4 = imgUrl;
}
@if (ModalEditAdVisible)
{
    <div class="modal fade show" id="myModal" style="display:block" aria-modal="true" role="dialog">
        <div class="modal-dialog modal-lg modal-dialog-scrollable">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">@Loc["EditAdTitle"]</h4>
                </div>
                <div class="modal-body">
                    <section class="section">
                        <div class="section-header">
                            <h1>@Loc["EditAdTitle"]</h1>
                            <h2>@Current.Title</h2>
                        </div>
                        <div class="card">
                            <div class="card-body">
                                @if (UpdateHasError)
                                {
                                    <div class="alert alert-danger">
                                        @Loc["UpdateFailedError"]
                                    </div>
                                }
                                <h3>@Loc["Summary"]</h3>
                                <div class="form-group col-6 col-sm-12">
                                    <label>@Loc["AdTitle"]</label>
                                    <input type="text" Class="form-control" @bind="Current.Title" />
                                </div>
                                <div class="form-group col-6 col-sm-12">
                                    <label>@Loc["Description"]</label>
                                    <textarea type="text" Class="form-control" rows="6" @bind="Current.Description" />
                                </div>
                                <div class="form-group col-6 col-sm-12">
                                    <label>@Loc["Price"]</label>
                                    <input type="number" Class="form-control" @bind="Current.Price" />
                                </div>
                                <div class="form-group col-6 col-sm-12">
                                    <label>@Loc["Url1"]</label>
                                    <input type="url" Class="form-control" @bind="Current.Url1" />
                                </div>
                                <div class="form-group col-6 col-sm-12">
                                    <label>@Loc["Url2"]</label>
                                    <input type="url" Class="form-control" @bind="Current.Url2" />
                                </div>
                                <div class="form-group col-6 col-sm-12">
                                    <label>@Loc["Url3"]</label>
                                    <input type="url" Class="form-control" @bind="Current.Url3" />
                                </div>
                                <div class="form-group col-6 col-sm-12">
                                    <label>@Loc["Url4"]</label>
                                    <input type="url" Class="form-control" @bind="Current.Url4" />
                                </div>
                                <div class="form-group col-6 col-sm-12">
                                    <MediaUploader OnChange="AssignImageUrl1" ImgUrl="@Current.ImageUrl1"></MediaUploader>
                                    @Current.ImageUrl1
                                </div>
                                <div class="form-group col-6 col-sm-12">
                                    <MediaUploader OnChange="AssignImageUrl2" ImgUrl="@Current.ImageUrl2"></MediaUploader>
                                    @Current.ImageUrl2
                                </div>
                                <div class="form-group col-6 col-sm-12">
                                    <MediaUploader OnChange="AssignImageUrl3" ImgUrl="@Current.ImageUrl3"></MediaUploader>
                                    @Current.ImageUrl3
                                </div>
                                <div class="form-group col-6 col-sm-12">
                                    <MediaUploader OnChange="AssignImageUrl4" ImgUrl="@Current.ImageUrl4"></MediaUploader>
                                    @Current.ImageUrl4
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-warning" @onclick="@(() => ModalEditAdVisible = false)">@Loc["Cancel"]</button>
                    <button type="button" class="btn btn-success" @onclick="Update">@Loc["Update"]</button>
                </div>
            </div>
        </div>
    </div>
}
@if (ModalDeleteAdVisible)
{
    <div class="modal fade show" id="myModal" style="display:block" aria-modal="true" role="dialog">
        <div class="modal-dialog modal-lg modal-dialog-scrollable">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">@Loc["DeleteAdTitle"]</h4>
                </div>
                <div class="modal-body">
                    <section class="section">
                        <div class="section-header">
                            <h1>@Loc["Title"]</h1>
                            <h2>@Current.Title</h2>
                        </div>
                        <div class="card">
                            <div class="card-body">
                                @if (DeleteHasError)
                                {
                                    <div class="alert alert-danger">
                                        @Loc["DeleteFailedError"]
                                    </div>
                                }
                                <h3>@Loc["Summary"]</h3>
                                <div class="form-group col-6 col-sm-12">
                                    <label>@Loc["AdTitle"]</label>
                                    <input type="text" Class="form-control" @bind="Current.Title" disabled="disabled" />
                                </div>
                                <div class="form-group col-6 col-sm-12">
                                    <label>@Loc["Description"]</label>
                                    <textarea type="text" Class="form-control" rows="6" @bind="Current.Description" disabled="disabled" />
                                </div>
                                <div class="form-group col-6 col-sm-12">
                                    <label>@Loc["Price"]</label>
                                    <input type="number" Class="form-control" @bind="Current.Price" disabled="disabled" />
                                </div>
                                <div class="form-group col-6 col-sm-12">
                                    <label>@Loc["Url1"]</label>
                                    <input type="url" Class="form-control" @bind="Current.Url1" disabled="disabled" />
                                </div>
                                <div class="form-group col-6 col-sm-12">
                                    <label>@Loc["Url2"]</label>
                                    <input type="url" Class="form-control" @bind="Current.Url2" disabled="disabled" />
                                </div>
                                <div class="form-group col-6 col-sm-12">
                                    <label>@Loc["Url3"]</label>
                                    <input type="url" Class="form-control" @bind="Current.Url3" disabled="disabled" />
                                </div>
                                <div class="form-group col-6 col-sm-12">
                                    <label>@Loc["Url4"]</label>
                                    <input type="url" Class="form-control" @bind="Current.Url4" disabled="disabled" />
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-warning" @onclick="@(() => ModalDeleteAdVisible = false)">@Loc["Cancel"]</button>
                    <button type="button" class="btn btn-success" @onclick="Delete">@Loc["Delete"]</button>
                </div>
            </div>
        </div>
    </div>
}
<section class="section">
    <div class="section-header">
        <h1>@Loc["Title"]</h1>
        <div class="section-header-breadcrumb">
            <div class="breadcrumb-item active"><a class="btn btn-lg btn-info" href="CreateAd"><i class="fa fa-2x fa-plus"></i></a></div>
        </div>
    </div>
    <div class="section-body">
        <div class="row">
            @foreach (var Ad in Ads)
            {
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h4>
                                @Ad.Title <span class="badge badge-primary">@Ad.ViewCount</span> @if (Ad.StartDisplayTime <= DateTime.UtcNow)
                                {
                                    if (Ad.EndDisplayTime >= DateTime.UtcNow)
                                    {
                                        <span class="badge badge-success">@Loc["OnlineBetween"] @Ad.StartDisplayTime / @Ad.EndDisplayTime</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-success">@Loc["NotOnlineSince"] @Ad.EndDisplayTime</span>
                                    }
                                }
                                else
                                {
                                    <span class="badge badget-secondary">@Loc["WillBeOnline"] @Ad.StartDisplayTime</span>
                                }
                            </h4>
                            <div class="card-header-action">
                                <a data-dismiss="#mycard-dimiss" class="btn btn-icon btn-primary" href="#">@Ad.Price</a>
                            </div>
                        </div>
                        <div class="card-body">
                            <p class="mb-2">
                                @Ad.Description
                            </p>
                            <div class="clearfix"></div>
                            <div class="row col-12">
                                <div class="gallery">
                                    @if (!string.IsNullOrEmpty(Ad.ImageUrl1))
                                    {
                                        <div class="col-lg-3 col-md-4">
                                            <a href="#" class="d-block mb-4 h-100"><img class="img-fluid img-thumbnail" style="max-width:90px;max-height:90px" src="@Ad.ImageUrl1" alt="Image 1"></a>
                                        </div>
                                    }
                                    @if (!string.IsNullOrEmpty(Ad.ImageUrl2))
                                    {
                                        <div class="col-lg-3 col-md-4">
                                            <a href="#" class="d-block mb-4 h-100"><img class="img-fluid img-thumbnail" style="max-width:90px;max-height:90px" src="@Ad.ImageUrl2" alt="Image 2"></a>
                                        </div>
                                    }
                                    @if (!string.IsNullOrEmpty(Ad.ImageUrl3))
                                    {
                                        <div class="col-lg-3 col-md-4">
                                            <a href="#" class="d-block mb-4 h-100"><img class="img-fluid img-thumbnail" style="max-width:90px;max-height:90px" src="@Ad.ImageUrl3" alt="Image 3"></a>
                                        </div>
                                    }
                                    @if (!string.IsNullOrEmpty(Ad.ImageUrl4))
                                    {
                                        <div class="col-lg-3 col-md-4">
                                            <a href="#" class="d-block mb-4 h-100"><img class="img-fluid img-thumbnail" style="max-width:90px;max-height:90px" src="@Ad.ImageUrl4" alt="Image 4"></a>
                                        </div>
                                    }
                                </div>
                            </div>
                            <div class="row text-center text-lg-left">
                            </div>
                            <button class="btn btn-primary" @onclick="@(()=>OpenEditModal(Ad))"><i class="fas fa-pen-square"></i></button>
                            <button class="btn btn-danger" @onclick="@(()=>OpenDeleteModal(Ad))"><i class="fas fa-trash-alt"></i></button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>