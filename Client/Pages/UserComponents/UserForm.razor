@namespace Abeer.Client.Pages
@inject Microsoft.Extensions.Localization.IStringLocalizer<Users> Loc
@inject Microsoft.AspNetCore.Authorization.IAuthorizationService AuthorizationService
<div class="simple-form">
    <EditForm Model="User">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <fieldset>
            <div class="form-group">
                <label for="year">@Loc["PinCode"]</label>
                <input @bind="@User.PinCode" type="text" class="form-control" id="User-PinCode" />
                <input @bind="@User.PinDigit"type="number" class="form-control" id="User-PinDigit" maxlength="6" />
            </div>
            <div class="form-group">
                <label for="year">@Loc["FirstName"]</label>
                <input @bind="@User.FirstName" type="text" class="form-control" id="User-FirstName" />
            </div>
            <div class="form-group">
                <label for="year">@Loc["LastName"]</label>
                <input @bind="@User.LastName" type="text" class="form-control" id="User-LastName" />
            </div>
            <div class="form-group">
                <label for="year">@Loc["DisplayName"]</label>
                <input @bind="@User.DisplayName" type="text" class="form-control" id="User-displayname" />
            </div>
            <div class="form-group">
                <label for="year">@Loc["Email"]</label>
                <input @bind="@User.Email" type="email" class="form-control" id="User-email" />
            </div>
            <div class="form-group">
                <label for="year">@Loc["City"]</label>
                <input @bind="@User.City" type="text" class="form-control" id="User-City" />
            </div>
            <div class="form-group">
                <label for="year">@Loc["Country"]</label>
                <input @bind="@User.Country" type="text" class="form-control" id="User-Country" />
            </div>
        </fieldset>
        <fieldset>
            <h4>@Loc["SelectRole"]</h4>
            <label><InputCheckbox @bind-Value="@User.IsAdmin" />@Loc["IsAdmin"]</label>
            <label><InputCheckbox @bind-Value="@User.IsManager" />@Loc["IsManager"]</label>
            <label><InputCheckbox @bind-Value="@User.IsOperator" />@Loc["IsOperator"]</label>
        </fieldset>
        <fieldset>
            <div class="form-group">
                @if (User.IsOnline)
                {
                    <span class="badge badge-success">@Loc["IsOnline"] @User.LastLogin</span>
                }
                else
                {
                    <span class="badge badge-danger">@Loc["IsNotOnline"]</span>
                }
            </div>
        </fieldset>
    </EditForm>
</div>