@page "/services"
@using System.Security.Claims

@code
{
    [CascadingParameter]
    private Task<AuthenticationState> authenticationStateTask { get; set; }
    public bool IsAdmin { get; set; }

    protected override async Task OnInitializedAsync()
    {
        var authenticateSate = await authenticationStateTask;

        if (authenticateSate.User?.Identity.IsAuthenticated == true)
        {
            IsAdmin = (authenticateSate.User.Identity.IsAuthenticated && authenticateSate.User.HasClaim(ClaimTypes.Role, "admin"));
        }
    } }
<section class="section">
    <div class="section-header">
        <h1>Services</h1>
    </div>

    <div class="section-body">
        <div class="card card-primary">
            <div class="card-header">
                <h3>Business</h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-3 col-md-3 col-sm-12">
                        <a href="profile">
                            <div class="card profile-widget border">
                                <div class="profile-widget-header">
                                    <i class="fa fa-8x fa-address-book rounded-circle profile-widget-picture" style="        color: blue
"></i>
                                </div>
                                <div class="profile-widget-description pb-0">
                                    <div class="profile-widget-name">You can share and manage your business contacts</div>
                                </div>
                            </div>
                        </a>
                    </div>
                    <div class="col-lg-3 col-md-3 col-sm-12">
                        <a href="ads">
                            <div class="card profile-widget border">
                                <div class="profile-widget-header">
                                    <i class="fa fa-8x fa-ad rounded-circle profile-widget-picture" style="color:blue"></i>
                                </div>
                                <div class="profile-widget-description pb-0">
                                    <div class="profile-widget-name">You can create and view ads to sell or buy stuff</div>
                                </div>
                            </div>
                        </a>
