@inject Microsoft.Extensions.Localization.IStringLocalizer<WelcomeDialog> Loc
@code
{
    [Parameter]
    public ClaimsPrincipal User { get; set; }
    [Parameter]
    public EventCallback Close { get; set; }
}

<div class="card">
    <div class="card-body text-center">
        <img src="assets/img/trophy.png">
        <h4>@Loc["Title"]!</h4>
        <p>@Loc["CatchPhrase"]</p> <button class="btn btn-primary" @onclick="Close">@Loc["Continue"]</button><br />
        <a href="subscription-pack">@Loc["Subscription"]</a>
    </div>
</div>