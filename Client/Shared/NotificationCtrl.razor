@namespace Abeer.Client.Shared
@inject Microsoft.Extensions.Localization.IStringLocalizer<NotificationCtrl> Loc

@if (NotificationClient?.Notifications != null && NotificationClient.Notifications.Count() > 0)
{
    <div class="modal fade show" id="myModal" style="display: block;" aria-modal="true" role="dialog">
        <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
            <div class="modal-content" style="position: relative">
                <div class="modal-header">
                    <h4 class="modal-title">@Loc[NextNotification.MessageTitle]</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close" @onclick="SetDisplayedNotification">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div @ontouchmove:preventDefault="true" @ontouchstart="HandleTouchStart" @ontouchend="HandleTouchEnd">
                    <div class="position-absolute cursor-right" style="border-radius:50px" @onclick="NextCard">
                        <img src="/assets/img/services/Iconly-Bulk-Arrow - Right.svg" />
                    </div>

                    <div class="modal-body tchat-body" style="overflow-y:auto;height: 80vh;">
                        @RenderDialog(NextNotification.NotificationType)
                    </div>
                </div>
            </div>
        </div>
    </div>
}