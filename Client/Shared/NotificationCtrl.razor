@namespace Abeer.Client.Shared
@inject Microsoft.Extensions.Localization.IStringLocalizer<NotificationCtrl> Loc

@if (NextNotification != null)
{
    <div class="modal fade show" id="myModal" style="display:block" aria-modal="true" role="dialog">
        <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">@Loc[NextNotification.NotificationType]</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close" @onclick="SetDisplayedNotification">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    @RenderDialog(NextNotification.NotificationType)
                </div>
            </div>
        </div>
    </div>
}