@if (_isModalVisible)
{
    <ModalDialog ShowModal="_isModalVisible"
                 CancelLabel="@StringLocalizer["LabelCancel"]" Mode="Import"
                 ModalCancelClicked="@(()=>_isModalVisible = false)"
                 ValidationClicked="Import" ValidationLabel="@StringLocalizer["Import"]">
        <ModalBody>
            <div class="simple-form">
                <fieldset>
                    <div class="form-group">
                        <label>@StringLocalizer["FileName"] @_fileName</label>
                        <label for="file-input-@Id">
                            <i class="fa fa-2x fa-paperclip"></i>
                        </label>
                        <input id="file-input-@Id" type="file" @ref="_input" @onchange="HandleSelected" accept=".csv, .xls, .xlsx, .xml, .txt" class="form-control" style="display: none" />
                    </div>
                    <h3>@StringLocalizer["Options"]</h3>
                    <div class="form-group">
                        <input type="checkbox" @bind="HasHeader" />@StringLocalizer["HasHeader"]
                    </div>
                    <div class="form-group">
                        <input type="checkbox" @bind="Reset" />@StringLocalizer["Reset"]
                    </div>
                    <div class="form-group">
                        <label>@StringLocalizer["SkipFirstRows"]</label>
                        <input type="number" class="form-control" @bind="SkipFirstRows" />
                    </div>
                    <div class="form-group">
                        <label>@StringLocalizer["LimitRows"]</label>
                        <input type="number" class="form-control" @bind="LimitRows" />
                    </div>
                </fieldset>
            </div>
        </ModalBody>
    </ModalDialog>
}