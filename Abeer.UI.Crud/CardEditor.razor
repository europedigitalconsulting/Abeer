@using Microsoft.AspNetCore.Components.Web.Virtualization
@typeparam TItem
@if (_isModalVisible)
{
    <div class="modal fade show" id="myModal" style="display:block" aria-modal="true" role="dialog">
        <div class="modal-dialog @ModalDialogSize">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">@TitleDialog</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close" @onclick="Cancel">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    @FormTemplate(Item)
                </div>
                <div class="modal-footer">
                    <hr />
                    <button class="btn btn-success" @onclick="Save"><i class="@IconDialog"></i>@DialogAction</button>
                    <button class="btn btn-warning" @onclick="Cancel"><i class="fas fa-window-close"></i>@StringLocalizer["Cancel"]</button>
                </div>
            </div>
        </div>
    </div>
}
@if (IsImportEnabled)
{
    <ImportModal @ref="_importModal" ApiPostFileUrl="@ImportPostFileUrl" StringLocalizer="@StringLocalizer"></ImportModal>
}

@if (Items != null)
{
    <section class="section">
        <div class="section-header">
            <h1>@StringLocalizer["Title"] <span class="badge badge-primary">@Items.Count</span></h1>
            <div class="section-header-breadcrumb">
                <div class="breadcrumb-item"><a href="/referential/services">@StringLocalizer["Home"]</a></div>
                <div class="breadcrumb-item"><a href="/referential/categories">@StringLocalizer["Title"]</a></div>
            </div>
        </div>
        <div class="section-body">
            <h2 class="section-title">@StringLocalizer["Title"]</h2>
            <p class="section-lead">@StringLocalizer["CatchPhrase"].</p>
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body p-2">
                            <div class="container-fluid">
                                <PagineableRepeater TItem="TItem" Items="@Items" EnableSearchFilter="true" PageSize="20">
                                    <SearchForm>
                                        <div class="row">
                                            <div class="col-lg-12">
                                                <div class="panel panel-default">
                                                    <div class="panel-body p-2">
                                                        <div class="input-group">
                                                            <input type="text" id="example-input1-group2" name="example-input1-group2" class="form-control" placeholder="@StringLocalizer["LabelSearch"]" @bind-value="SearchTerm">
                                                            <span class="input-group-btn pl-2">
                                                                <button type="button" class="btn btn-effect-ripple btn-primary" @onclick="@(async () => await SearchButtonClick.InvokeAsync(SearchTerm))"><i class="fa fa-search"></i></button>

                                                                @if (IsAddedAllowed() == true)
                                                                {
                                                                    <button type="button" class="btn btn-effect-ripple btn-primary" @onclick="ShowInsert" title="@StringLocalizer["LabelInsert"]"><i class="fas fa-plus-square"></i></button>
                                                                    @if (IsImportEnabled)
                                                                    {
                                                                        <button type="button" class="btn btn-effect-ripple btn-primary" @onclick="ShowImport" title="@StringLocalizer["LabelImport"]"><i class="fas fa-file-upload"></i></button>
                                                                    }
                                                                }
                                                            </span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </SearchForm>
                                    <ChildContent Context="item">
                                        @RepeaterItemTemplate(item)
                                    </ChildContent>
                                    <EmptyTemplate>
                                        @EmptyTemplate
                                    </EmptyTemplate>
                                </PagineableRepeater>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}
else
{
    <span>@StringLocalizer["loading"]...</span>
}