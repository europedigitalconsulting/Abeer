@page
@model LoginModel
@inject IStringLocalizer<LoginModel> localizer
@inject IHtmlLocalizer<LoginModel> htmlLocalizer
@{
    Layout = null;
    ViewData["Title"] = localizer["Title"];
}

<!DOCTYPE html>
<html lang="@System.Globalization.CultureInfo.CurrentCulture.TwoLetterISOLanguageName">
<head>
    <meta charset="UTF-8">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, shrink-to-fit=no" name="viewport">
    <title>@ViewData["Title"]</title>
    <link href="/css/bootstrap/bootstrap.min.css" rel="stylesheet" />
    <link href="/css/fontawesome/css/all.css" rel="stylesheet" />
    <link href="/vendors/jquery-ui-dist/jquery-ui.min.css" rel="stylesheet" />
    <link href="/vendors/jqvmap/dist/jqvmap.min.css" rel="stylesheet" />
    <link href="/vendors/owl.carousel/dist/assets/owl.carousel.min.css" rel="stylesheet" />
    <link href="/vendors/owl.carousel/dist/assets/owl.theme.default.min.css" rel="stylesheet" />
    <link href="/vendors/summernote/dist/summernote-bs4.css" rel="stylesheet" />
    <link href="/vendors/chocolat/dist/css/chocolat.css" rel="stylesheet" />
    <link href="/css/app.css" rel="stylesheet" />
    <link href="/css/components.css" rel="stylesheet" />
    <link rel="icon" href="/favicon.ico" />

</head>

<body>
    <div id="app">
        <section class="section">
            <div class="d-flex flex-wrap align-items-stretch">
                <div class="col-lg-4 col-md-6 col-sm-12 order-lg-1 min-vh-100 order-2 bg-white">
                    <div class="p-4 m-3">
                        <div class="login-brand">
                            <img src="/assets/img/logo_full.png" alt="Smart-Clik" class="img-shadow shadow-light" style="max-height:150px">
                        </div>
                        <h4 class="text-dark font-weight-normal">@htmlLocalizer["Welcome"]</h4>
                        <p class="text-muted">@localizer["Muted"]</p>
                        <a class="btn btn-success" href="register">@localizer["CreateAccount"]</a><br />
                        <hr/>
                        <form id="account" method="post">
                            <h4>@localizer["LocalLoginCatchPhrase"]</h4>
                            <hr />
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Input.Email">@localizer["Email"]</label>
                                <input asp-for="Input.Email" class="form-control" />
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Input.Password">@localizer["Password"]</label>
                                <input asp-for="Input.Password" class="form-control" />
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <div class="checkbox">
                                    <label asp-for="Input.RememberMe">
                                        <input asp-for="Input.RememberMe" />
                                        @localizer["RememberMe"]
                                    </label>
                                </div>
                            </div>
                            <div class="form-group">
                                <button class="btn btn-primary">@localizer["SubmitText"]</button><br /><br />
                                <a class="text-primary" href="register">@localizer["CreateAccount"]</a><br />
                                <a class="text-primary" href="LoginWithPinCode">@localizer["ConnectMyCard"]</a>
                            </div>
                        </form>
                        @*<div class="text-center mt-5 text-small">
                            @htmlLocalizer["Copyright"]
                            <div class="mt-2">
                                <a href="#">@localizer["PrivacyLinkText"]</a>
                                <div class="bullet"></div>
                                <a href="#">@localizer["TermOfServiceText"]</a>
                            </div>
                        </div>*@
                    </div>
                </div>
                <div class="d-none d-md-block d-xl-block col-lg-8 col-md-6 col-sm-12 order-lg-2 order-1 min-vh-100 background-walk-y position-relative overlay-gradient-bottom" data-background="/assets/img/unsplash/beirut.jpg">
                    <div class="absolute-bottom-left index-2">
                        <div class="text-light p-5 pb-2">
                            <div class="mb-5 pb-3">
                                <h1 class="mb-2 display-4 font-weight-bold">@localizer["GoodMorning"]</h1>
                                <h5 class="font-weight-normal text-muted-transparent">beirut, Lebanon</h5>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>

    <!-- General JS Scripts -->
    <script src="/vendors/jquery/dist/jquery.min.js"></script>
    <script src="/vendors/jquery-ui-dist/jquery-ui.min.js"></script>
    <script src="/js/popper.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="/vendors/jquery.nicescroll/dist/jquery.nicescroll.min.js"></script>

    <!--application-->
    <script src="/js/app.js"></script>
    <script src="/js/scripts.js"></script>
    <script src="/js/custom.js"></script>

    <!-- General JS Scripts -->
    <partial name="_ValidationScriptsPartial" />
</body>
</html>