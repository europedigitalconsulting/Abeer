@page
@model LoginModel
@inject IStringLocalizer<LoginModel> localizer
@inject IHtmlLocalizer<LoginModel> htmlLocalizer
@{
    Layout = null;
    ViewData["Title"] = localizer["Title"];
}

<!DOCTYPE html>
<html lang="@System.Globalization.CultureInfo.CurrentCulture.TwoLetterISOLanguageName">
<head>
    <meta charset="UTF-8">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, shrink-to-fit=no" name="viewport">
    <title>@ViewData["Title"]</title>
    <link href="/css/bootstrap/bootstrap.min.css" rel="stylesheet" />
    <link href="/css/fontawesome/css/all.css" rel="stylesheet" />
    <link href="/vendors/jquery-ui-dist/jquery-ui.min.css" rel="stylesheet" />
    <link href="/vendors/jqvmap/dist/jqvmap.min.css" rel="stylesheet" />
    <link href="/vendors/owl.carousel/dist/assets/owl.carousel.min.css" rel="stylesheet" />
    <link href="/vendors/owl.carousel/dist/assets/owl.theme.default.min.css" rel="stylesheet" />
    <link href="/vendors/summernote/dist/summernote-bs4.css" rel="stylesheet" />
    <link href="/vendors/chocolat/dist/css/chocolat.css" rel="stylesheet" />
    <link href="/css/app.css" rel="stylesheet" />
    <link href="/css/components.css" rel="stylesheet" />
    <link rel="icon" href="favicon.ico" />

</head>

<body>
    <div id="app">
        <section class="section">
            <div class="d-flex flex-wrap align-items-stretch">
                <div class="col-lg-4 col-md-6 col-12 order-lg-1 min-vh-100 order-2 bg-white">
                    <div class="p-4 m-3">
                        <div class="login-brand">
                            <img src="/assets/img/logo_full.png" alt="Smart Click" class="img-shadow shadow-light">
                        </div>
                        <h4 class="text-dark font-weight-normal">@htmlLocalizer["Welcome"]</h4>
                        <p class="text-muted">@localizer["Muted"]</p>
                        <form id="account" method="post">
                            <h4>@localizer["LocalLoginCatchPhrase"]</h4>
                            <hr />
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Input">@localizer["PinCode"]</label>
                                <input asp-for="Input.PinCode" class="form-control" />
                                <span asp-validation-for="Input.PinCode" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Input.PinDigit">@localizer["PinDigit"]</label>
                                <input asp-for="Input.PinDigit" class="form-control" />
                                <span asp-validation-for="Input.PinDigit" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary">@localizer["SubmitText"]</button>
                            </div>
                        </form>
                        <div class="text-center mt-5 text-small">
                            @htmlLocalizer["Copyright"]
                            <div class="mt-2">
                                <a href="#">@localizer["PrivacyLinkText"]</a>
                                <div class="bullet"></div>
                                <a href="#">@localizer["TermOfServiceText"]</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-8 col-12 order-lg-2 order-1 min-vh-100 background-walk-y position-relative overlay-gradient-bottom" data-background="/assets/img/unsplash/beirut.jpg">
                    <div class="absolute-bottom-left index-2">
                        <div class="text-light p-5 pb-2">
                            <div class="mb-5 pb-3">
                                <h1 class="mb-2 display-4 font-weight-bold">@localizer["GoodMorning"]</h1>
                                <h5 class="font-weight-normal text-muted-transparent">beirut, Lebanon</h5>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>

    <!-- General JS Scripts -->
    <script src="/vendors/jquery/dist/jquery.min.js"></script>
    <script src="/vendors/jquery-ui-dist/jquery-ui.min.js"></script>
    <script src="/js/popper.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="/vendors/jquery.nicescroll/dist/jquery.nicescroll.min.js"></script>

    <!-- JS Libraies -->
    <script src="/vendors/jquery-sparkline/jquery.sparkline.min.js"></script>
    <script src="/vendors/jqvmap/dist/jquery.vmap.min.js"></script>
    <script src="/vendors/owl.carousel/dist/owl.carousel.min.js"></script>
    <script src="/vendors/summernote/dist/summernote-bs4.min.js"></script>
    <script src="/vendors/chocolat/dist/js/jquery.chocolat.min.js"></script>

    <!-- chart js-->
    <script src="/vendors/moment/moment-with-locales.min.js" type="text/javascript" language="javascript"></script>
    <script src="/vendors/chart/Chart.min.js" type="text/javascript" language="javascript"></script>

    <!--application-->
    <script src="/js/app.js"></script>
    <script src="/js/scripts.js"></script>
    <script src="/js/custom.js"></script>

    <!-- General JS Scripts -->
    <partial name="_ValidationScriptsPartial" />
</body>
</html>