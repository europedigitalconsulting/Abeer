@page
@model LoginModel
@inject IStringLocalizer<LoginModel> localizer
@inject IHtmlLocalizer<LoginModel> htmlLocalizer
@{
    Layout = null;
    ViewData["Title"] = localizer["Title"];
}

<!DOCTYPE html>
<html lang="@System.Globalization.CultureInfo.CurrentCulture.TwoLetterISOLanguageName">
<head>
    <meta charset="UTF-8">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, shrink-to-fit=no" name="viewport">
    <title>@ViewData["Title"]</title>
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link href="/css/bootstrap/bootstrap.min.css" rel="stylesheet" />
    <link href="/css/fontawesome/css/all.css" rel="stylesheet" /> 
    <link href="/css/app.css" rel="stylesheet" />
    <link href="/css/components.css" rel="stylesheet" />
    <link rel="icon" href="/favicon.ico" />

</head>

<body>
    <div id="app">
        <section class="container">
            <div class="login-brand pt-3">
                <img class="w-100 d-lg-none d-md-none" src="/assets/img/connexion/bg_intro.svg" />
                <img src="/assets/img/connexion/smartclik_logo.png" />
            </div>
            <div class="row pb-3 mt-5 mt-lg-5 justify-content-lg-center" style="color: #97AABD;font-size:14px;font-weight:400; ">
                <div class="col-lg-4 col-sm-12 bg-white">
                    <span><span class="text-green font-weight-bold">@htmlLocalizer["SmartClik"]</span>@localizer["Muted-p1"]</span>
                    <br /><br />
                    <div class="text-justify">
                        <span id="text-desc-p2">@localizer["Muted-p2"]</span>
                        <span class="text-green font-weight-bold">@localizer["Muted-p3"]</span>
                    </div>
                    <br />
                    <br />
                    <a class="btn btn-success btn-lg col-12 text-uppercase" href="register">@localizer["CreateAccount"]</a><br />
                    <hr class=" d-lg-none" />
                </div>
                <div class="offset-lg-1 col-lg-4 col-sm-12">
                    <div class="collapse d-lg-block" id="collapseExample">
                        <form id="account" method="post">
                            <p>@localizer["LocalLoginCatchPhrase"]</p>
                            @*<div asp-validation-summary="All" class="text-danger"></div>*@
                            <div class="form-group">
                                <input asp-for="Input.Email" class="form-control" placeholder="@localizer["Email"]" />
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input asp-for="Input.Password" class="form-control" placeholder="@localizer["Password"]" />
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <div class="checkbox">
                                    <label asp-for="Input.RememberMe">
                                        <input asp-for="Input.RememberMe" />
                                        @localizer["RememberMe"]
                                    </label>
                                </div>
                            </div>
                        </form>
                    </div>
                    <button id="btn-connect-toggle" data-action="0" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample" class="pt-2 pb-2 btn btn-warning text-decoration-none col-12 text-uppercase d-lg-none" style="border-radius:15px;">
                        @localizer["Connect"]
                    </button>
                    <button id="btn-connect" class="pt-2 pb-2 btn btn-warning text-decoration-none col-12 text-uppercase d-none d-lg-block " style="border-radius:15px;">

                        @localizer["Connect"]
                    </button>
                    <a href="/Identity/Account/register" class="pl-0 pt-2 pb-2 text-decoration-none col-3 d-lg-none d-md-none">
                        <img class="pt-2 pb-2" src="/assets/img/services/macarte_sm.svg" style="box-shadow: 0px 5px 35px 0px lightgrey; padding-left: 10px; border-radius: 0px 0px 19px 19px; background: #F5F8FA;" />
                    </a>
                    <a href="LoginWithPinCode" class="float-right mt-3 text-decoration-none d-lg-none d-md-none" style="font-size: 14px; color: #97AABD">
                        Se connecter avec ma carte
                    </a>
                    <div class="row justify-content-center mt-2">
                        <a href="ForgotPassword" class="mt- text-decoration-none" style="font-size: 14px; color: #97AABD">
                            @localizer["ForgotPasswordText"]
                        </a>
                    </div>
                </div>
            </div>
        </section>
    </div>
    <footer class="footer hidden-mobile" style=" bottom: 0px; position: absolute;">
        <div class="container">
            <img width="120" src="/assets/img/connexion/smartclik_logo.png" /><br />
            <span style="font-size:12px;">Copyright © smart-clik 2021 - All rights reserved</span>
        </div>
    </footer>

    <partial name="_ScriptImport" />

    <!-- General JS Scripts -->
    <partial name="_ValidationScriptsPartial" />

    <script type="text/javascript">
        $("#btn-connect-toggle").click(function () {

            if ($(this).attr("data-action") == "1") {
                $(this).attr('data-toggle', 'false');
                $("#account").submit();
            }
            else {
                $(this).attr('data-action', '1');
                $("#text-desc-p2").hide();
            }
        });

        $("#btn-connect").click(function () {
            $("#account").submit();
        });
    </script>
</body>
</html>