@page
@model RegisterModel
@inject IStringLocalizer<RegisterModel> localizer
@inject IHtmlLocalizer<RegisterModel> htmlLocalizer
@{
    Layout = null;
    ViewData["Title"] = localizer["Title"];
}

<!DOCTYPE html>
<html lang="@System.Globalization.CultureInfo.CurrentCulture.TwoLetterISOLanguageName">
<head>
    <meta charset="UTF-8">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, shrink-to-fit=no" name="viewport">
    <title>@ViewData["Title"]</title>
    <link href="/css/bootstrap/bootstrap.min.css" rel="stylesheet" />
    <link href="/css/fontawesome/css/all.css" rel="stylesheet" />
    <link href="/vendors/jquery-ui-dist/jquery-ui.min.css" rel="stylesheet" />
    <link href="/vendors/jqvmap/dist/jqvmap.min.css" rel="stylesheet" />
    <link href="/vendors/owl.carousel/dist/assets/owl.carousel.min.css" rel="stylesheet" />
    <link href="/vendors/owl.carousel/dist/assets/owl.theme.default.min.css" rel="stylesheet" />
    <link href="/vendors/summernote/dist/summernote-bs4.css" rel="stylesheet" />
    <link href="/vendors/chocolat/dist/css/chocolat.css" rel="stylesheet" />
    <link href="/css/app.css" rel="stylesheet" />
    <link href="/css/components.css" rel="stylesheet" />

</head>

<body>
    <div id="app">
        <section class="section">
            <div class="container mt-5">
                <div class="row">
                    <div class="col-12 col-sm-10 offset-sm-1 col-md-8 offset-md-2 col-lg-8 offset-lg-2 col-xl-8 offset-xl-2">
                        <div class="login-brand">
                            <img src="/assets/img/logo_full.png" alt="Smart-Clik" class="shadow-light rounded-circle mb-5 mt-2" style="max-height:150px">
                        </div>
                        <div class="card card-primary">
                            <div class="card-header"><h4>@localizer["CatchPhrase"].</h4></div>
                            <div class="card-body">
                                <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                    <div asp-validation-summary="All" class="text-danger"></div>
                                    <div class="form-group">
                                        <label asp-for="Input.FirstName">@localizer["FirstName"]</label>
                                        <input asp-for="Input.FirstName" class="form-control" />
                                        <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Input.LastName">@localizer["LastName"]</label>
                                        <input asp-for="Input.LastName" class="form-control" />
                                        <span asp-validation-for="Input.LastName" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Input.DisplayName">@localizer["DisplayName"]</label>
                                        <input asp-for="Input.DisplayName" class="form-control" />
                                        <span asp-validation-for="Input.DisplayName" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Input.Email">@localizer["Email"]</label>
                                        <input asp-for="Input.Email" class="form-control" />
                                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Input.City">@localizer["City"]</label>
                                        <input asp-for="Input.City" class="form-control" />
                                        <span asp-validation-for="Input.City" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Input.Country">@localizer["Country"]</label>
                                        <select asp-for="Input.Country" class="form-control">
                                            @foreach (var country in Model.Countries)
                                            {
                                                <option value="@country.Value">@country.Text</option>
                                            }
                                        </select>
                                        <span asp-validation-for="Input.Country" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Input.Password">@localizer["Password"]</label>
                                        <input asp-for="Input.Password" class="form-control" />
                                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Input.ConfirmPassword">@localizer["ConfirmPassword"]</label>
                                        <input asp-for="Input.ConfirmPassword" class="form-control" />
                                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <input type="checkbox" asp-for="Input.NoCard" />
                                        <label asp-for="Input.NoCard">@localizer["NotCard"]</label>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Input.DigitCode">@localizer["DigitCode"]</label>
                                        <input asp-for="Input.DigitCode" class="form-control" />
                                        <span asp-validation-for="Input.DigitCode" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Input.PinCode">@localizer["PinCode"]</label>
                                        <input asp-for="Input.PinCode" class="form-control" />
                                        <span asp-validation-for="Input.PinCode" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <input type="checkbox" readonly="readonly" />@localizer["RequestCertificate"]
                                    </div>
                                    <button type="submit" class="btn btn-primary">@localizer["Register"]</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>

    <!-- General JS Scripts -->
    <script src="/vendors/jquery/dist/jquery.min.js"></script>
    <script src="/vendors/jquery-ui-dist/jquery-ui.min.js"></script>
    <script src="/js/popper.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="/vendors/jquery.nicescroll/dist/jquery.nicescroll.min.js"></script>

    <!-- JS Libraies -->
    <script src="/vendors/jquery-sparkline/jquery.sparkline.min.js"></script>
    <script src="/vendors/jqvmap/dist/jquery.vmap.min.js"></script>
    <script src="/vendors/owl.carousel/dist/owl.carousel.min.js"></script>
    <script src="/vendors/summernote/dist/summernote-bs4.min.js"></script>
    <script src="/vendors/chocolat/dist/js/jquery.chocolat.min.js"></script>

    <!-- chart js-->
    <script src="/vendors/moment/moment-with-locales.min.js" type="text/javascript" language="javascript"></script>
    <script src="/vendors/chart/Chart.min.js" type="text/javascript" language="javascript"></script>

    <!--application-->
    <script src="/js/app.js"></script>
    <script src="/js/scripts.js"></script>
    <script src="/js/custom.js"></script>

    <!-- General JS Scripts -->
    <partial name="_ValidationScriptsPartial" />

</body>
</html>