@using Microsoft.AspNetCore.Components.Web.Virtualization
<div class="dropdown">
    <button class="btn btn-success" type="button" @onclick="@(()=>Show=true)">
        <i class="fas fa-share-alt-square"></i>&nbsp;@Loc["SendToContact"]
    </button>
    <div class="dropdown-menu w-100 @(Show ? "show": "")">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close" @onclick="@(()=>Show=false)">
            <span aria-hidden="true">&times;</span>
        </button>
        <div class="px-4 py-3">
            <div class="form-group">
                <label>@Loc["Subject"]</label>
                <input @bind="Subject" class="form-control" />
            </div>
            <div class="form-group">
                <label>@Loc["Message"]</label>
                <textarea @bind="Body" class="form-control" />
            </div>
            <div class="form-group">
                @Loc["Contact"]
                <div class="input-group">
                    @if (EditContact)
                    {
                        <span>
                            <i class="fas fa-user"></i>
                        </span>
                        <input class="form-control" @bind-value="SearchContactInput" @bind-value:event="oninput" />
                    }
                    else if (Contact != null)
                    {
                        <a href="/viewProfile/@Contact.Id" style="left:25px;padding-left:25px;padding-top:10px">
                            <span>@Contact.DisplayName</span>
                        </a>
                        <button class="btn btn-primary" @onclick="StartEditContact"><i class="fas fa-pen"></i></button>
                    }
                </div>
                @if (DisplayListContact)
                {
                    <div class="list-group">
                        <Virtualize Context="contact" Items="ListContacts">
                            <a class="list-group-item" @onclick="@(()=>SetContact(contact))">
                                @contact.DisplayName
                            </a>
                        </Virtualize>
                    </div>
                }
            </div>
            <div class="form-group">
                <button class="btn btn-success" @onclick="SendProfile"><i class="fas fa-paper-plane"></i>@Loc["Send"]</button>
            </div>
        </div>
    </div>
</div>
