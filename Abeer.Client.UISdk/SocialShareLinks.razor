     </svg>
                    </div>@Loc["ShareOnTumblr"]
                </div>
            </a>
        }
        @if (ShowEmail)
        {
            <!-- Sharingbutton E-Mail -->
            <a class="dropdown-item resp-sharing-button__link" href="mailto:?subject=@Uri.EscapeDataString(Title ?? "").&amp;body=@Url("email")" target="_self" rel="noopener" aria-label="Share by E-Mail">
