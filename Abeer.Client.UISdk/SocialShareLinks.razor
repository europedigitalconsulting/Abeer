                    </div>@Loc["ShareOnEmail"]
                </div>
            </a>
        }
        @if (ShowPinterest)
        {
            <!-- Sharingbutton Pinterest -->
            <a class="dropdown-item resp-sharing-button__link" href="https://pinterest.com/pin/create/button/?url=@Url("pintereset")&amp;media=@Url("pintereset")&amp;description=@Uri.EscapeDataString(Title ?? "")" target="_blank" rel="noopener" aria-label="Share on Pinterest">
