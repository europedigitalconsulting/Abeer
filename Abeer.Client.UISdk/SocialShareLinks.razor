@code
{
    [Parameter]
    public bool ShowFacebook { get; set; } = true;
    [Parameter]
    public bool ShowTwitter { get; set; } = true;
    [Parameter]
    public bool ShowTumblr { get; set; } = true;
    [Parameter]
    public bool ShowEmail { get; set; } = true;
    [Parameter]
    public bool ShowPinterest { get; set; } = true;
    [Parameter]
    public bool ShowLinkedIn { get; set; } = true;
    [Parameter]
    public bool ShowWhatsApp { get; set; } = true;
    [Parameter]
    public string TargetUrl { get; set; }
    [Parameter]
    public string Title { get; set; }
    [Parameter]
    public string Text { get; set; }
    [Parameter]
    public string Source { get; set; }
    [Parameter]
    public string Content { get; set; }
    [Parameter]
    public Microsoft.Extensions.Localization.IStringLocalizer Loc { get; set; }
    [Inject]
    private NavigationManager NavigationManager { get; set; }
    [CascadingParameter]
    private Abeer.Shared.Functional.ScreenSize ScreenSize { get; set; }

    private string Url(string network)
    {
        var url = Uri.EscapeDataString(string.IsNullOrEmpty(TargetUrl) ? NavigationManager.ToAbsoluteUri(NavigationManager.Uri).ToString() : TargetUrl);

        if (url.Contains("?"))
            url += "&";
        else
            url += "?";

        return url + $"social={network}";
    }
}
<div class="dropdown">
    <button class="btn btn-success dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <i class="fas fa-share-alt-square"></i>&nbsp;@Loc["ShareIt"]
    </button>
    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
        @if (ShowFacebook)
        {
            <!-- Sharingbutton Facebook -->
            <a class="dropdown-item resp-sharing-button__link" href="https://facebook.com/sharer/sharer.php?u=@Url("facebook")" target="_blank" rel="noopener" aria-label="Share on Facebook">
                <div class="resp-sharing-button resp-sharing-button--facebook resp-sharing-button--large">
                    <div aria-hidden="true" class="resp-sharing-button__icon resp-sharing-button__icon--solidcircle">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M12 0C5.38 0 0 5.38 0 12s5.38 12 12 12 12-5.38 12-12S18.62 0 12 0zm3.6 11.5h-2.1v7h-3v-7h-2v-2h2V8.34c0-1.1.35-2.82 2.65-2.82h2.35v2.3h-1.4c-.25 0-.6.13-.6.66V9.5h2.34l-.24 2z" /></svg>
                    </div>@Loc["ShareOnFacebook"]
                </div>
            </a>
        }
        @if (ShowTwitter)
        {
            <!-- Sharingbutton Twitter -->
            <a class="dropdown-item resp-sharing-button__link" href="https://twitter.com/intent/tweet/?text=@Uri.EscapeDataString(Text ?? "").&amp;url=@Url("twitter")" target="_blank" rel="noopener" aria-label="Share on Twitter">
                <div class="resp-sharing-button resp-sharing-button--twitter resp-sharing-button--large">
                    <div aria-hidden="true" class="resp-sharing-button__icon resp-sharing-button__icon--solidcircle">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M12 0C5.38 0 0 5.38 0 12s5.38 12 12 12 12-5.38 12-12S18.62 0 12 0zm5.26 9.38v.34c0 3.48-2.64 7.5-7.48 7.5-1.48 0-2.87-.44-4.03-1.2 1.37.17 2.77-.2 3.9-1.08-1.16-.02-2.13-.78-2.46-1.83.38.1.8.07 1.17-.03-1.2-.24-2.1-1.3-2.1-2.58v-.05c.35.2.75.32 1.18.33-.7-.47-1.17-1.28-1.17-2.2 0-.47.13-.92.36-1.3C7.94 8.85 9.88 9.9 12.06 10c-.04-.2-.06-.4-.06-.6 0-1.46 1.18-2.63 2.63-2.63.76 0 1.44.3 1.92.82.6-.12 1.95-.27 1.95-.27-.35.53-.72 1.66-1.24 2.04z" /></svg>
                    </div>@Loc["ShareOnTwitter"]
                </div>
            </a>
        }
        @if (ShowTumblr)
        {
            <!-- Sharingbutton Tumblr -->
            <a class="dropdown-item resp-sharing-button__link" href="https://www.tumblr.com/widgets/share/tool?posttype=link&amp;title=@Uri.EscapeDataString(Title ?? "").&amp;caption=@Uri.EscapeDataString(Title ?? "").&amp;content=@Uri.EscapeDataString(Content ?? "")&amp;canonicalUrl=@Url("tumblr")&amp;shareSource=@Uri.EscapeDataString(Source ?? "")" target="_blank" rel="noopener" aria-label="Share on Tumblr">
