@page "/ads/list"
@using System.Security.Claims
@using Abeer.UI_Ads.Components
@attribute [Authorize(Policy = "OnlySubscribers")]
@inject IHttpClientFactory HttpClientFactory
@inject Microsoft.Extensions.Localization.IStringLocalizer<ListAds> Loc
@inject NavigationManager NavigationManager
<section class="section">
    <div class="section-header">
        <h1>@Loc["Title"]</h1>
    </div>
    <div class="section-header">
        <div class="input-group">
            <button class="btn btn-primary" @onclick="GotoMyAds">@Loc["MyAds"]</button>
            <button class="btn @(FilterZone == "All" ? "btn-success" : "btn-primary")" @onclick="GetAll"><i class="fas fa-globe"></i>@Loc["All"]</button>
            <button class="btn @(FilterZone == "Country" ? "btn-success" : "btn-primary")" @onclick="GetByCountry"><i class="fas fa-globe-europe"></i>@Loc["MyCountry"]</button>
            <button class="btn @(FilterZone == "Freinds" ? "btn-success" : "btn-primary")" @onclick="GetByFreinds"><i class="fas fa-user-friends"></i>@Loc["MyFreinds"]</button>
            <input type="search" id="example-input1-group2" name="example-input1-group2" class="form-control" @bind="Term" @onkeyup="countTerm">
            <span class="input-group-btn">
                <button type="button" class="btn" @onclick="Search"><i class="fa fa-2x  fa-search"></i></button>
            </span>
            <div class="search-backdrop"></div>
        </div>
    </div>
    <div class="section-body">
        <div class="row">
            <div class="col-12">
                @if (Items.Any())
                {
                    <Virtualize Items="Items" Context="ad">
                        <CardAd Loc="Loc" Ad="ad" Editable="false"></CardAd>
                    </Virtualize>
                }
                else
                {
                    <div class="card bg-info p-5">
                        <div class="text-center">@Loc["NoAds"]</div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>

<div class="fixed-bottom m-5">
    @if (IsAdmin)
    {
        <a href="/ads/manage" class="btn btn-danger btn-circle btn-xl float-right ml-2"><i class="fa fa-2x fa-database"></i></a>
    }
    <a href="/ads/create" class="btn btn-danger btn-circle btn-xl float-right"><i class="fa fa-2x fa-plus"></i></a>
</div>
