
<div class="info">
    <h5>Liste des attributs</h5><br />

    @if (ListAttributeEdit != null && ListAttributeEdit.Count > 0)
    {
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Code</th>
                    <th scope="col">Label</th>
                    <th scope="col">Type</th>
                    <th scope="col">Required</th>
                    <th scope="col">Searchable</th>
                    <th scope="col">Supprimer</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in ListAttributeEdit)
                {
                <tr>
                    <td>@item.Code</td>
                    <td>@item.Label</td>
                    <td>@item.Type</td>
                    <td>@item.IsRequired</td>
                    <td>@item.IsSearchable</td>
                    <td><button @onclick="() => DeleteAttribute(item)" type="button" class="btn btn-danger tooltips" data-placement="top" data-toggle="tooltip" data-original-title="Delete"><!--!--><i class="fas fa-trash"></i></button></td>
                </tr>

                }
            </tbody>
        </table>
    }
    else
    {
        <span>Cette famille n'a pas d'attributs</span>
    }
</div>
<br />
<br />
<div class="section-body">
    <fieldset class="col-12 scheduler-border">
        <legend class="scheduler-border">Ajouter un attribut</legend>
        <div class="form-inline">
            <div class="form-group col-4">
                <input type="text" placeholder="Code" @bind="@NewAttributes.Code" class="form-control" />
            </div>
            <div class="form-group col-4">
                <input type="text" placeholder="Label" @bind="@NewAttributes.Label" class="form-control" />
            </div>
            <div class="form-group col-4">
                <select @bind="NewAttributes.Type" class="form-control">
                    <option value="">Type</option>
                    <option value="Text">Text</option>
                    <option value="Numeric">Numeric</option>
                    <option value="DateTime">DateTime</option>
                </select>
            </div>
        </div>
        <div class="form-inline">
            <div class="form-group col-6">
                <div class="form-check">
                    <input id="IsRequired" type="checkbox" @bind="@NewAttributes.IsRequired" />
                    <label class="form-check-label" for="IsRequired">
                        Champ obligatoire
                    </label>
                </div>
                <div class="form-check col-6">
                    <input id="IsSearchable" type="checkbox" @bind="@NewAttributes.IsSearchable" />
                    <label class="form-check-label" for="IsSearchable">
                        Champ Recherche
                    </label>
                </div>
            </div>
        </div>
        <button type="button" class="btn btn-primary float-right" @onclick="AddAttribute">Ajouter</button>
    </fieldset>
</div>