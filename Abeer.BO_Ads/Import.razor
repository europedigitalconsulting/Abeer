@page "/bo/ads/Import"
@using Tewr.Blazor.FileReader
@attribute [Microsoft.AspNetCore.Authorization.Authorize]
@namespace Abeer.Ads 
@inject Microsoft.Extensions.Localization.IStringLocalizer<Import> Loc

@if (ImportResult != null && ShowImportResultDialog)
{
    <div class="modal fade show" id="myModal" style="display:block" aria-modal="true" role="dialog">
        <div class="modal-dialog modal-lg modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">@Loc["ImportRowResult"]</h4>
                </div>
                <div class="modal-body">
                    <dl>
                        <dt>@Loc["AddFamilies"]</dt>
                        <dd>@ImportResult.FamiliesAdded</dd>
                    </dl>
                    <dl>
                        <dt>@Loc["UpdateFamilies"]</dt>
                        <dd>@ImportResult.FamiliesUpdated</dd>
                    </dl>
                    <dl>
                        <dt>@Loc["AddCategories"]</dt>
                        <dd>@ImportResult.CategoriesAdded</dd>
                    </dl>
                    <dl>
                        <dt>@Loc["UpdateCategories"]</dt>
                        <dd>@ImportResult.CategoriesUpdated</dd>
                    </dl>
                    <dl>
                        <dt>@Loc["AddProductTypes"]</dt>
                        <dd>@ImportResult.ProductTypesAdded</dd>
                    </dl>
                    <dl>
                        <dt>@Loc["UpdateProductTypes"]</dt>
                        <dd>@ImportResult.ProductTypesUpdated</dd>
                    </dl>
                </div>
                <div class="modal-footer">
                    <hr />
                    <button class="btn btn-success" @onclick="@(()=>ShowImportResultDialog=false)">@Loc["Finish"]</button>
                </div>
            </div>
        </div>
    </div>

}
<div class="main-content">
    <section class="section">
        <div class="section-header">
            <h1>@Loc["Import"]</h1>
            <div class="section-header-breadcrumb">
                <div class="breadcrumb-item active"><a href="#">@Loc["Home"]</a></div>
                <div class="breadcrumb-item"><a href="/referential/services">@Loc["Referential"]</a></div>
                <div class="breadcrumb-item">@Loc["Import"]</div>
            </div>
        </div>
        <div class="section-body">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body p-2">
                            <div class="panel">
                                <div class="panel-body">
                                    <div class="simple-form">
                                        <fieldset>
                                            <div class="form-group">
                                                <label>@Loc["FileName"]</label>
                                                <label for="file-input">
                                                    <i class="fa fa-2x fa-paperclip"></i>
                                                </label>
                                                <input id="file-input" type="file" @ref="_input" @onchange="HandleSelected" accept=".csv, .xls, .xlsx, .xml, .txt" class="form-control" style="display: none" />
                                                @_options.FileName
                                            </div>
                                            <h3>@Loc["Options"]</h3>
                                            <div class="form-group">
                                                <input type="checkbox" @bind="_options.HasHeader" />@Loc["HasHeader"]
                                            </div>
                                            <div class="form-group">
                                                <input type="checkbox" @bind="_options.Reset" />@Loc["Reset"]
                                            </div>
                                            <div class="form-group">
                                                <label>@Loc["SkipFirstRows"]</label>
                                                <input type="number" class="form-control" @bind="_options.SkipFirstRows" />
                                            </div>
                                            <div class="form-group">
                                                <label>@Loc["LimitRows"]</label>
                                                <input type="number" class="form-control" @bind="_options.LimitRows" />
                                            </div>
                                            <div class="form-group">
                                                <button class="btn btn-success" @onclick="ImportFile"><i class="fas fa-cloud-upload-alt"></i>@Loc["Upload"]</button>
                                            </div>
                                        </fieldset>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>